
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="application.properties"/>
		
	<typeAliases>
		<package name="kr.or.yi.mybatis_pool_c3p0_kjy.dto"/>
		<!-- 
			<typeAlias type="kr.or.yi.mybatis_pool_c3p0_kjy.dto.Title" alias="Title"/>
			<typeAlias type="kr.or.yi.mybatis_pool_c3p0_kjy.dto.Department" alias="Department"/>
			<typeAlias type="kr.or.yi.mybatis_pool_c3p0_kjy.dto.Employee"  alias="Employee"/>		
		-->
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mappers/TitleMapper.xml"/>
	</mappers>
</configuration>